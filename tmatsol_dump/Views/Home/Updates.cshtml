
@{
    ViewBag.Title = "Updates";
}
<hr/>
    <h4 class="text-center text-uppercase">UPDATES</h4>
    <hr />
<div class="row justify-content-around text-center">
    <div class="col-md-3 col-sm product-w-shadow UpdateCell" id="tmatsModalTrigger">
        <img src="~/images/think logo.jpeg" title="Think Softwares |TMATS Software|Inventory Management Software |Accounting and Inventory Maangement Software" class="img-fluid productimg" role="img" />
        <div><b>Think-TMATS-Accounting | Think-TMATS-Inventory | Think-TMATS-Total</b></div>
        <div class="text-left"><span>Version</span>&nbsp;:&nbsp;<span></span></div>
        <div class="text-left"><span>Upload Date</span>&nbsp;:&nbsp;<span></span></div>
        <div class="btn-group">
            <button id="infobtn" class="btn btn-outline-info" role="dialog" data-target="#tmatsModal" data-toggle="modal" onclick="@Url.Action("coming_soon", "Home", "")">More Info</button>
            <a id="downloadbtn" title="Download" value="Download" class="btn btn-outline-success" role="button" href=@Url.Action("downloads", "Home", new { filename = "TMATS_MULTI.rar" })>Download</a>
        </div>
    </div>
    <div class="col-md-3 col-sm product-w-shadow UpdateCell" id="restModalTrigger">
        <img src="~/images/restaurant.png" title="Restaurant Software|Restaurant Management Total Software" class="img-fluid productimg" role="img" />

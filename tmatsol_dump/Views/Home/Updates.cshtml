                        <div><span>Upload Date</span>&nbsp;:&nbsp;<span>@ViewBag.VersionTmats</span></div>
                    </div>
                </div>
                <div class="modal-footer" style="border:none;">
                    <div class="row mr-auto">
                        <button id="downloadThinkRest" class="btn btn-outline-success" role="button" onclick="@Url.Action("downloads", "Home", new { filename = "TMATS_MULTI.rar" })">Download</button>

        <div class="text-left"><span>Version</span>&nbsp;:&nbsp;<span></span></div>
        <div class="text-left"><span>Upload Date</span>&nbsp;:&nbsp;<span></span></div>
        <div class="btn-group">
            <button id="infobtn" class="btn btn-outline-info" role="dialog" data-target="#restModal" data-toggle="modal" onclick="@Url.Action("coming_soon", "Home", "")">More Info</button>
            <a id="downloadbtn" title="Download" class="btn btn-outline-success" role="button" href="@Url.Action("downloads", "Home", new { filename = "POS_RESTAURANT.rar" })">Download</a>
        </div>
    </div>
    <div class="col-md-3 col-sm product-w-shadow UpdateCell" id="retailTrigger">
        <img src="~/images/retail.png" title="Retail Software | Think Retail Software| Think Retail Managment Total Software" class="img-fluid productimg" role="img" />

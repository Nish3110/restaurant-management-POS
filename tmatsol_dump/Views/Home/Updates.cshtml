            <a id="downloadbtn" title="Download" class="btn btn-outline-success text-success" role="button" onclick="@Url.Action("downloads", "Home", new { filename = "POS_RETAIL.rar" })">Download</a>
        </div>
    </div>
</div>
<!--modal-->
<!--TMATS-->
<div id="tmatsModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="tmatsModal" aria-hidden="true">

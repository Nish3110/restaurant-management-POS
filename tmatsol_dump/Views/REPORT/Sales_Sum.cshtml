<div class="container" id="cont">

    <div style="display:flex;justify-content:center;">
        @*@using (Ajax.BeginForm("Sale_summary", new AjaxOptions { UpdateTargetId = "results", InsertionMode = InsertionMode.Replace, LoadingElementId = "loading", OnFailure = "onError" }))*@
        @*using (Html.BeginForm("Sale_summary", "Report", FormMethod.Post,new AjaxOptions { UpdateTargetId = "results", InsertionMode = InsertionMode.Replace, LoadingElementId = "loading", OnFailure = "onError" }))*@
        @using (Ajax.BeginForm("Sale_summary", new AjaxOptions { UpdateTargetId = "results", InsertionMode = InsertionMode.Replace, LoadingElementId = "loading", OnFailure = "onError" }))
        {
            <div class="form-row">
                <div class="form-group col-m-6">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroup-sizing-sm">From Date:</span>
                        </div>
                        <input type="date" name="DcsFrDt" id="DcsFrDt" required aria-describedby="basic-addon1">
                    </div>
                </div>
                <div class="form-group col-m-6">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroup-sizing-sm">Time:</span>
                        </div>
                        <input type="time" name="DcsFrTime" required aria-describedby="basic-addon2" value="00:00">
                    </div>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-m-6">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroup-sizing-sm">To Date:</span>
                        </div>
                        <input type="date" name="DcsToDt" id="DcsToDt" required aria-describedby="basic-addon1">
                    </div>
                </div>
                <div class="form-group col-m-6">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroup-sizing-sm">Time:</span>
                        </div>
                        <input type="time" name="DcsToTime" required aria-describedby="basic-addon2" value="23:59">
                    </div>
                </div>
            </div>

            <input type="hidden" value="" id="To" name="To" />

            <div class="form-group">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroup-sizing-sm">Filter:</span>
                    </div>
                    @Html.DropDownList("c", ViewData["Filter"] as List<SelectListItem>, new { id = "Filter", @class = "form-control", required = "" })
                </div>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroup-sizing-sm">Report Type:</span>
                    </div>
                    @Html.DropDownList("ReportType", ViewData["ReportType"] as List<SelectListItem>, new { id = "rm_type", @class = "form-control", required = "" })
                </div>
            </div>


            <br />

            <button title="Sales Summary" formaction="Sale_summary" target="_blank" formmethod="post" id="sales" class="btn btn-secondary btn-lg btn-block">
                Process Report
            </button>

            <div class="" style="display:flex;justify-content:center;">
                <div class="col-md-3 text-center sales">

                </div>
            </div>

            <br />

            <div class="row">

            </div>

            <br />

            <div class="row">

            </div>

            <br />

            <div class="row">

            </div>
        }
    </div>
</div>
<div id="loading">
    <i class="fas fa-circle-notch fa-spin"></i>
</div>

<div id="results">

</div>


<script>

    var onError = function () {
        window.location.href = '/Error';
    };
    $(document).ready(function () {
        var now = new Date();

        var sum = now.getMonth() + 1;
        var month = ('0' + sum).slice(-2);
        var date = ('0' + now.getDate()).slice(-2);

        var today1 = now.getFullYear() + '-' + month + '-' + date;
        $('#DcsFrDt').val(today1);
        $('#DcsToDt').val(today1);
    });
</script>
